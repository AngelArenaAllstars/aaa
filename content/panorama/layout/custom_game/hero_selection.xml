<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/hero_selection.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/util.js" />
    <include src="file://{resources}/scripts/custom_game/hero_selection.js" />
  </scripts>
  <Panel class="MainHolder" onactivate=";">
    <DOTAScenePanel id="PregameBG" hittest="false" map="backgrounds/pregame_phase" camera="shot_cameraA" />
    <Panel class="TeamStatus">
      <Panel class="FillWidth">
        <Button class="DashboardButton" onactivate="DOTAHUDShowDashboard();"/>
      </Panel>
      <Panel id="TeamRadiant">
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_meepo" id="playerimage0"/>
          <Label class="PlayerLabel" id="playerlabel0" text="Name 0"/>
        </Panel>
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_wisp" id="playerimage1"/>
          <Label class="PlayerLabel" id="playerlabel1" text="Name 1"/>
        </Panel>
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_gyrocopter" id="playerimage2"/>
          <Label class="PlayerLabel" id="playerlabel2" text="Name 2"/>
        </Panel>
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_chaos_knight" id="playerimage3"/>
          <Label class="PlayerLabel" id="playerlabel3" text="Name 3"/>
        </Panel>
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_axe" id="playerimage4"/>
          <Label class="PlayerLabel" id="playerlabel4" text="Name 4"/>
        </Panel>
      </Panel>
      <Panel id="Clock">
      </Panel>
      <Panel id="TeamDire">
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_lone_druid" id="playerimage5"/>
          <Label class="PlayerLabel" id="playerlabel5" text="Name 5"/>
        </Panel>
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_medusa" id="playerimage6"/>
          <Label class="PlayerLabel" id="playerlabel6" text="Name 6"/>
        </Panel>
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_witch_doctor" id="playerimage7"/>
          <Label class="PlayerLabel" id="playerlabel7" text="Name 7"/>
        </Panel>
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_lion" id="playerimage8"/>
          <Label class="PlayerLabel" id="playerlabel8" text="Name 8"/>
        </Panel>
        <Panel class="Player">
          <DOTAHeroImage hittest="false" class="PlayerImage" heroname="npc_dota_hero_elder_titan" id="playerimage9"/>
          <Label class="PlayerLabel" id="playerlabel9" text="Name 9"/>
        </Panel>
      </Panel>
      <Panel class="FillWidth"/>
    </Panel>
    <Panel id="MainContent">
      <Panel class="LeftColumn">
        <Label class="SectionTitle" text="Minimap"/>
        <Panel id="Minimap">
          <DOTAMinimap require-composition-layer="true" />
        </Panel>

        <Label class="SectionTitle" text="Info"/>
        <Panel id="GameInfo">
          <Label text="Some info about game, i suggest text format"/>
        </Panel>
      </Panel>
      <Panel class="MiddleColumn">
        <Label id="ChooseHeroLabel" text="Choose Your Hero"/>
        <Panel class="HeroHolder" id="StrengthHeroes"/>
        <Panel class="HeroHolder" id="AgilityHeroes"/>
        <Panel class="HeroHolder" id="IntelligenceHeroes"/>
      </Panel>
      <Panel class="RightColumn">
        <Label class="SectionTitle" text="Preview"/>
        <Panel id="HeroSelector">
          <Panel id="HeroPreview">
            <DOTAScenePanel unit="npc_dota_hero_meepo" />
          </Panel>
          <Panel id="HeroPickContainer">
            <Button group="HeroChoises" id="HeroLockIn" onactivate="SelectHero()">
              <Label id="HeroLockLabel" text="Lock In"/>
            </Button>
            <Button group="HeroChoises" id="HeroRandom">
              <Panel id="HeroRandomIcon"/>
              <Label id="HeroRandomLabel" text="Random"/>
            </Button>
          </Panel>
        </Panel>
        <Label class="SectionTitle" text="Chat"/>
        <Panel id="CustomChat">
          <Label text="We will have to make custom chat, existing one is too shit to try to port. I suggest we teke base from CIA"/>
        </Panel>
      </Panel>
    </Panel>
    <Panel id="StrategyContent">
      <Panel class="BossIcon" id="Boss1r">
        <Label text="Tier 1"/>
      </Panel>
      <Panel class="BossIcon" id="Boss2r">
        <Label text="Tier 2"/>
      </Panel>
      <Panel class="BossIcon" id="Boss3r">
        <Label text="Tier 3"/>
      </Panel>
      <Panel class="BossIcon" id="Boss4r">
        <Label text="Tier 4"/>
      </Panel>
      <Panel class="BossIcon" id="Boss5r">
        <Label text="Tier 5"/>
      </Panel>

      <Panel class="BossIcon" id="Boss1d">
        <Label text="Tier 1"/>
      </Panel>
      <Panel class="BossIcon" id="Boss2d">
        <Label text="Tier 2"/>
      </Panel>
      <Panel class="BossIcon" id="Boss3d">
        <Label text="Tier 3"/>
      </Panel>
      <Panel class="BossIcon" id="Boss4d">
        <Label text="Tier 4"/>
      </Panel>
      <Panel class="BossIcon" id="Boss5d">
        <Label text="Tier 5"/>
      </Panel>

      <Panel class="DuelIconHolder" id="Duel1">
        <Panel class="DuelIcon"/>
        <Label text="Duel 1"/>
      </Panel>
      <Panel class="DuelIconHolder" id="Duel2">
        <Panel class="DuelIcon"/>
        <Label text="Duel 2"/>
      </Panel>
    </Panel>
  </Panel>
</root>
