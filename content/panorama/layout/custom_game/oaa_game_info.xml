<root>
	<styles>
    <include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/oaa_game_info.css" />
	</styles>
	<Panel class="OAAGameInfo">
		<Panel id="Title">
			<Label id="TitleName" text="#addon_game_name" />
		</Panel>
		<Label id="ObjectiveHeader" class="Header" html="true" text="#game_info_header_objective" />
		<Label id="BriefDescription" text="#brief_description" />
		<Label id="HowToPlayHeader" class="Header" html="true" text="#game_info_header_how_to_play" />

		<Panel id="ThroneRow" class="InfoRow">
			<Label id="ThroneText" html="true" text="#game_info_bosses" />
			<Image id="ThroneImage" src="file://{images}/custom_game/game_info/reflex_core.psd" />
		</Panel>
		<Panel id="CoinsRow" class="InfoRow">
			<Image id="CoinsImage" src="file://{images}/custom_game/game_info/farming_core.psd" />
			<Label id="CoinsText" html="true" text="#game_info_upgrade_core" />
		</Panel>
		<Panel id="ItemsRow" class="InfoRow">
			<Label id="ItemsText" html="true" text="#game_info_reflex_core" />
			<Image id="ItemsImage" src="file://{images}/custom_game/game_info/upgrade_core.psd" />
		</Panel>
    <Panel id="FarmingCaveRow" class="InfoRow">
      <Image id="FarmingCaveImage" src="file://{images}/custom_game/game_info/farming_cave.psd" />
      <Label id="FarmingCaveText" html="true" text="#game_info_farming_cave" />
    </Panel>
    <Panel id="DuelsRow" class="InfoRow">
      <Label id="DuelsText" html="true" text="#game_info_duels" />
      <Image id="DuelsImage" src="file://{images}/custom_game/game_info/duels.psd" />
    </Panel>






		<Label id="TipsHeader" class="Header" html="true" text="#game_info_tips_header" />
		<Panel id="TipsRow" class="InfoRow">
			<Label id="TipText01" class="TipText" html="true" text="#game_info_tip01" />
			<Label id="TipText02" class="TipText" html="true" text="#game_info_tip02" />
			<Label id="TipText03" class="TipText" html="true" text="#game_info_tip03" />
			<Label id="TipText04" class="TipText" html="true" text="#game_info_tip04" />
		</Panel>
	</Panel>
</root>

